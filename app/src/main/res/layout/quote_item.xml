<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#F7F3F0"
    app:cardCornerRadius="25dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/ivQuoteIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnQuoteMore"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnQuoteMore"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/wrdw" />

        <TextView
            android:id="@+id/tvQuoteHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/alegreya_sans_regular"
            android:text="Заголовок блока"
            android:textColor="#253334"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvQuoteDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Чем скорее ты закончишь - тем скорее пойдешь поесть"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/btnQuoteMore"
            app:layout_constraintStart_toStartOf="@+id/tvQuoteHeader"
            app:layout_constraintTop_toBottomOf="@+id/tvQuoteHeader" />

        <Button
            android:id="@+id/btnQuoteMore"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="23dp"
            android:backgroundTint="#253334"
            android:text="Подробнее"
            android:textColor="#FFFFFF"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvQuoteHeader"
            app:layout_constraintTop_toBottomOf="@+id/tvQuoteDescription"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>